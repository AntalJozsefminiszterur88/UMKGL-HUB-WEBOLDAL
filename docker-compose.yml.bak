services:
  db:
    image: postgres:15-alpine
    restart: unless-stopped
    volumes:
      - postgres_data:/var/lib/postgresql/data
    environment:
      POSTGRES_USER: myuser
      POSTGRES_PASSWORD: mypassword
      POSTGRES_DB: mydb
    networks:
      - umgkl_net

  web:
    build: .
    restart: unless-stopped
    # Ez a sor teszi elérhetővé a konténert a géped 3000-es portján
    ports:
      - "3000:3000"
    depends_on:
      - db
    environment:
      DB_HOST: db
      DB_USER: myuser
      DB_PASSWORD: mypassword
      DB_NAME: mydb
    networks:
      - umgkl_net
      - shared_proxy_net

volumes:
  postgres_data:

networks:
  umgkl_net:
  shared_proxy_net:
    external: true